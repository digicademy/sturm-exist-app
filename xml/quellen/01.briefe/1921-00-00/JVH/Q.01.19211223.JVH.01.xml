        <body>
            <div type="address">
                <pb xml:id="S.403r.01" n="403r" facs="http://resolver.staatsbibliothek-berlin.de/SBB0000DA4E00000001"/>
                <ab type="recipient">
                    <address>
                        <addrLine>Herrn Direktor</addrLine>
                        <addrLine>Her<hi rend="underline">warth Walden</hi>
                        </addrLine>
                        <addrLine>Verlag der Sturm</addrLine>
                        <addrLine>134<hi rend="super">
                                <hi rend="twice-underline">a</hi>
                            </hi> Potsdamerstrasse</addrLine>
                        <addrLine>Be<hi rend="underline">rlin</hi> W 9/ Deutschland</addrLine>
                    </address>
